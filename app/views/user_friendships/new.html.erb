<% if @friend %>
<h1><%= friend.first_name %></h1>

<p>Are you sure you want to friend <%= friend.first_name %>?</p>

<%= form_for @user_friendship, mehtod: :post do |form| %>

<div class="form form-actions">
  <%= form.hidden_field :friend_id, value: @friend.profile_name %>
  <%= submit_tag "Of course!", class: 'btn btn-primary' %>
  <%= link_to "Cancel", profile_path(@friend), class: 'btn' %>
 </div>
  <% end %>
<% end %>