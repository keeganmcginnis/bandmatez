<div class='page-header'>
  <h1><%= @user.profile_name %></h1>
  <br />Steam Username: <%= @user.steam_username%>
  <br />Location: <%= @user.location %>
  <br />Favorite Game: <%= @user.favorite_game %>
  <br />System Type: <%= @user.system_type %>
  <br />
  <h3><%= link_to "Add Friend", user_friendships_path(friend_id: @user), method: 'POST', class: 'btn btn-default' %></h3>
</div>

<% if @statuses %>
  <% @statuses.each do |status| %>  

  <div class="well">
    <%= status.content %>
    <br />

    <%= link_to time_ago_in_words(status.created_at),  status_path(status) %> ago

    </div>

    <% end %>
  <% end %>
