<div class="page-header">
  <h1>All Steamers in Sauna.</h1>
</div>

<div class="row">
<p class="sort-text">System</p>
<select class="form-control sort-objects">
  <option>Mac</option>
  <option>PC</option>
 </select>

<p class="sort-text">Favorite Game </p>
 <select class="form-control sort-objects">
   <option>CS:GO</option>
   <option>Left 4 Dead</option>
   <option>Civ IV</option>
   <option>Team Fortress 2</option>
   <option>Rust</option>
 </select>

<p class="sort-text">Country</p>
  <select class="form-control sort-objects">
    <option>America</option>
    <option>Germany</option>
    <option>Mexico</option>
    <option>China</option>
    <option>Japan</option>
  </select>



<%= link_to "Post a New Status", new_status_path, class: "btn btn-danger btn-custom"%>

<% @statuses.each do |status| %>
<div class="status">
  <strong><%= status.user.profile_name %></strong>
  <% if !status.user.steam_username.blank? || !status.user.location.blank? %>
    <br />
  <% end %>
  <% if !status.user.steam_username.blank? %>
    <i class="muted">Steam name: <%= link_to status.user.steam_username, status.user.steam_link %></i>
  <% end %>
  &nbsp;
  &nbsp;
  <% if !status.user.location.blank? %>
    <i class="muted">Location: <%= status.user.location %></i>
  <% end %>
  <% if user_signed_in? && status.user == current_user %>
    <%= link_to('edit', edit_registration_path(current_user)) %>
  <% end %>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
    <span class="admin">
      <%= link_to "Edit", edit_status_path(status) %>
      <%= link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status?"} %>
    </span>
  </div>
 </div>
<% end %>

 