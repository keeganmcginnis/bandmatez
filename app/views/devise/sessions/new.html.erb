<div class="row">
  <div class="span4">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well"}) do |f| %>

<fieldset>
  <legend>Sign in</legend>
  
  <h4>Email</h4>
    <%= f.text_field :email, class: 'form-control' %>
  <h4>Password</h4>  
    <%= f.text_field :password, class: 'form-control' %>

  <% if devise_mapping.rememberable? %>
    <%= f.input :remember_me, as: :boolean %>
  <% end %>


  <h3>Or login with Steam!</h3>
    <%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_large_noborder.png"), '/auth/steam' %>

 <%= f.button :submit, "Sign in", class: 'btn btn-default' %>
</fieldset>
<% end %>

<%= render "devise/shared/links" %>
  </div>

  <div class="span8">
    <h2>Sign up, meet local steamers, make friendly friends and things of such.</h2>
  </div>
</div>
