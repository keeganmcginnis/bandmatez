<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
   <div>
     <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
   </div>

   <div>
     <%= f.text_field :profile_name, class: 'form-control', placeholder: "Profile Name" %>
   </div>

   <div>
     <%= f.text_field :steam_username, class: 'form-control', placeholder: "Steam Username" %>
   </div>

   <div>
     <%= f.text_field :favorite_game, class: 'form-control', placeholder: "Favorite Game" %>
   </div>

   <div>
     <%= f.text_field :system_type, class: 'form-control', placeholder: "System Type" %>
   </div>

   <div>
     <%= f.text_field :location, class: 'form-control', placeholder: "Location" %>
   </div>

   <div>
     <%= f.text_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
   </div>

   <div>
     <%= f.text_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Password Conformation" %>
   </div>

  <div><%= f.submit "Sign up", class: "btn btn-danger btn-custom" %></div>
<% end %>

<%= render "devise/shared/links" %>
